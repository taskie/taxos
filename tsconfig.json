{
    "compilerOptions": {
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2017",
        "sourceMap": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["src/*"]
        },
        "lib": ["dom", "dom.iterable", "esnext", "scripthost"],
        "outDir": "dist-ts",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "types": []
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
